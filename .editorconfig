# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{scala,sbt}]
indent_style = space
indent_size = 2
continuation_indent_size = 2
max_line_length = 100

[*.{yml,yaml,json,md}]
indent_style = space
indent_size = 2

[*.{sh,nix}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false   # so Markdown tables donâ€™t break

